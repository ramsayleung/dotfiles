[global]
    font = "System San Francisco Display 11"
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "200x5-10+10"
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = "#4e4e4e"

[frame]
    width = 1
    color = "#3a3a3a"

[shortcuts]
    close = ctrl+space
    context = ctrl+shift+period

[urgency_low]
    background = "#3a3a3a"
    foreground = "#87d7d7"
    timeout = 10

[urgency_normal]
    background = "#3a3a3a"
    foreground = "#d8af5f"
    timeout = 20

[urgency_critical]
    background = "#3a3a3a"
    foreground = "#ffafaf"
    timeout = 0
